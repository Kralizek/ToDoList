@page "{handler?}/{id?}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<p>
    <a asp-page="./Add">Add new</a>
</p>
<table class="table">
    <thead>
        <th>Title</th>
        <th>Due date</th>
        <th>Inserted On</th>
        <th>Is done</th>
        <th />
        <th />
    </thead>
    <tbody>
@foreach (var item in Model.Items)
{
        <tr>
            <td><a asp-page="./View" asp-route-id="@item.Id">@item.Title</a></td>
            <td>@item.DueDate</td>
            <td>@item.InsertedOn</td>
            <td>@item.IsDone</td>
            <td>
            @if (!item.IsDone) 
            {
                <form asp-page-handler="MarkAsDone" asp-route-id="@item.Id" method="post">
                    <button class="btn btn-default">Mark as done</button>
                </form>
            }
            </td>
            <td>
                <form asp-page-handler="Delete" asp-route-id="@item.Id" method="post">
                    <button class="btn btn-default">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>